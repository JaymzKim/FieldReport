<MOML xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.applusform.com/xsd/moml_ui.xsd" version="1.1.1">
	<FUNCTION id="onScroll(x,y)">
		<CMD cmd="h = 280" />
		<CMD condition="y lt h">
			<CMD>
				<CMD cmd="alpha = math.max(0, math.min(y,h)/h) * 255" />
				<CMD cmd="SYTitle.defaultImg=string.format('#%02xffffff', alpha)" />
				<CMD cmd="titleLine.defaultImg=string.format('#%02xf5f5f5', alpha)" />
				<CMD cmd="TitleLabel.textColor=string.format('#%02x000000', alpha)" />
				<CMD cmd="TitleBack.defaultImg='../img/sy_btn_back_white01.png'" />
			</CMD>
			<ELSECMD>
				<CMD cmd="SYTitle.defaultImg='#ffffff'" />
				<CMD cmd="titleLine.defaultImg='#f5f5f5'" />
				<CMD cmd="TitleLabel.textColor='#000000'" />
				<CMD cmd="TitleBack.defaultImg='../img/sy_btn_back_blue01.png'" />
			</ELSECMD>
		</CMD>
		<CMD cmd="function.backBgScroll(bg,y)" />
		<CMD cmd="function.backBgScroll(bg1,y)" />
		<CMD cmd="function.backBgScroll(bg2,y)" />
	</FUNCTION>


	<FUNCTION id="backBgScroll(bg,y)">
		<CMD cmd="height = scrollView.height" />
		<CMD cmd="top = bg.top" />
		<CMD condition="y + height gt top">
			<CMD condition="y lt top">
				<CMD cmd="bg.backBg.top = -200+(y + height - top) / height * 200" />
			</CMD>
		</CMD>
	</FUNCTION>

	<FUNCTION id="aniTo">
		<CMD cmd="animation.show('detailImage', 'fade', '', 400, '')" />
		<CMD cmd="animation.flyIn('detailImage', 0, userVariable.detailY, 720,480, '', 400, '')" />
	</FUNCTION>

	<FUNCTION id="SYTel(sy_tel)">
		<CMD cmd="appLauncher.openUri('tel:'+sy_tel+'', '')" />
	</FUNCTION>

	<CMD cmd="function.aniTo" />



	<DATASOURCELIST>
		<DATASOURCE id="DetailBasic" src="http://www.ebunyang.co.kr/AjaxContent/SYFieldReportAPPDetail.php?report_cd={userVariable.sy_id}"/>
	</DATASOURCELIST>
	<UILAYOUT portrait="720,1230" landscape="720,1230">
		<POPUP layout="0,0,720,1230" defaultImg="#ffffff" showEffect="" hideEffect="" onClick="action:close()">
			<WINDOW id="scrollView" layout="0,0,720,1230" align="linear:vertical" scroll="vertical" scrollBarVisible="false" onScroll="function.onScroll">

				<WINDOW id="detailImage" defaultImg="#ffffff" align="relative" visible="invisible">
					<WINDOW align="relative">
						<IMAGE layout="0,0,720,auto" align="linear:vertical" loadingEffect="fadeIn" loadingImg="#e5e5e5" defaultImg="{xpath.evaluateEx('DetailBasic','/DATA/SYItem/SYImage/text()')}"/>
						<LABEL layout="0,prev.height/2,720,60" align="linear:vertical" text="{xpath.evaluateEx('DetailBasic','/DATA/SYItem/SYTitle/text()')}" fontSize="50" minFontSize="-1" fontStyle="bold" textColor="#ffffff" textAlign="center" textShadow="#90000000"/>
					</WINDOW>
				</WINDOW>

				<WINDOW defaultImg="#ffffff" align="flow:vertical|center">
					<LABEL layout="720,auto" padding="20,40,20,40" text="{xpath.evaluateEx('DetailBasic','/DATA/SYItem/SYMemo/text()')}" fontSize="30" minFontSize="-1" textAlign="center" multiLine="true" textColor="#565a5c"/>
				</WINDOW>

				<WINDOW defaultImg="#ffffff" align="flow:vertical|center">
					<LIST id="SYComplexInfo" align="flow:vertical|center" dataSource="http://www.ebunyang.co.kr/AjaxContent/SYFieldReportAPPDetail.php?report_cd={userVariable.sy_id}" dataList="/DATA/SYComplexInfo/SYRow" divider="none" defaultImg="#dddddd">
						<LISTLAYOUT layout="720,30" defaultImg="#000000">
							<WINDOW align="flow:vertical|center">
								<LABEL layout="120,auto" text="{xpath.evaluate('./SYTitle/text()')}" fontSize="30" minFontSize="-1" multiLine="true" textColor="#707070" defaultImg="#ffffff"/>
								<LABEL layout="600,auto" text="{xpath.evaluate('./SYContent/text()')}" fontSize="30" minFontSize="-1" multiLine="true" textColor="#333333" defaultImg="#ffffff"/>
							</WINDOW>
						</LISTLAYOUT>
					</LIST>
					<LABEL layout="720,auto" padding="20,40,20,40" text="{xpath.evaluateEx('DetailBasic','/DATA/SYItem/SYMemo/text()')}" fontSize="30" minFontSize="-1" textAlign="center" multiLine="true" textColor="#565a5c"/>
				</WINDOW>

				<WINDOW defaultImg="#ffffff" align="flow:vertical|center">
					<LABEL layout="720,auto" padding="20,40,20,40" text="{xpath.evaluateEx('DetailBasic','/DATA/SYComplexInfo/SYRow[1]/SYContent/text()')}" fontSize="30" minFontSize="-1" textAlign="center" multiLine="true" textColor="#565a5c"/>
				</WINDOW>

			</WINDOW>
			<WINDOW id="SYTitle" layout="0,0,720,9mm" defaultImg="#00ffffff" align="relative">
				<LABEL id="TitleLabel" layout="0,0,720,9mm" align="linear:vertical" text="{xpath.evaluateEx('DetailBasic',
'/DATA/SYItem/SYTitle/text()')}" fontSize="40" fontStyle="bold" minFontSize="-1" textAlign="vCenter|hCenter" textColor="#00000000"/>
				<BUTTON id="TitleBack" layout="0,0,9mm,9mm" align="linear:vertical" onClick="container.close()" defaultImg="../img/sy_btn_back_white01.png"/>
			</WINDOW>
			<LABEL id="titleLine" layout="0,9mm,720,2" defaultImg="#00f5f5f5" />
			<BUTTON layout="0,1134,720,96" defaultImg="#9037629f" text="분양 문의하기" fontSize="40" textAlign="center" textColor="#ffffff" onClick="function.SYTel(''+xpath.evaluateEx('DetailBasic',
'/DATA/SYItem/SYContact/text()')+'')"/>
		</POPUP>
	</UILAYOUT>
</MOML> 